{
  "name": "@textbus/monorepo",
  "version": "4.0.0",
  "description": "A rich text editor framework.",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "webpack-dev-server",
    "serve": "npx y-websocket HOST=localhost PORT=1234 ",
    "build:lib": "lerna run build:lib",
    "publish:lib": "lerna publish",
    "lint-staged": "lint-staged",
    "lint": "eslint packages --ext .ts,.tsx --max-warnings 0",
    "test": "cross-env env=test jest",
    "test-c": "cross-env env=test jest --coverage",
    "prepare": "husky install"
  },
  "lint-staged": {
    "packages/adapter-react/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ],
    "packages/adapter-viewfly/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ],
    "packages/adapter-vue/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ],
    "packages/collaborate/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ],
    "packages/core/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ],
    "packages/platform-browser/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ],
    "packages/platform-node/src/**/*.(ts,tsx)": [
      "eslint --ext .ts,.tsx --max-warnings 0"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "author": "tanbo",
  "license": "GPL-3.0-only",
  "keywords": [
    "textbus",
    "富文本编辑器",
    "wysiwyg",
    "wysiwyg editor",
    "rich text editor",
    "editor",
    "html editor",
    "web editor",
    "typescript editor"
  ],
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@hocuspocus/server": "^2.13.6",
    "@tanbo/json-parser": "^0.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^18.11.11",
    "@types/prismjs": "^1.16.6",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@viewfly/core": "^1.2.1",
    "@viewfly/platform-browser": "^1.2.1",
    "add-assets-webpack-plugin": "^1.0.0",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "core-js": "^3.20.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.5.0",
    "eslint-webpack-plugin": "^3.1.1",
    "extract-loader": "^5.1.0",
    "file-loader": "^6.2.0",
    "gulp": "^4.0.2",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "intl-segmenter-polyfill": "^0.4.4",
    "ip": "^2.0.1",
    "jest": "^29.7.0",
    "jest-canvas-mock": "^2.4.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^8.0.0",
    "lint-staged": "^13.0.2",
    "loader-utils": "^3.2.0",
    "mini-css-extract-plugin": "^2.4.5",
    "open": "^8.4.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^7.1.0",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "to-string-loader": "^1.2.0",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.1"
  },
  "dependencies": {
    "@tanbo/stream": "^1.2.7",
    "reflect-metadata": "^0.2.2",
    "y-webrtc": "^10.3.0",
    "y-websocket": "^2.1.0",
    "yjs": "^13.6.23"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textbus/textbus.git"
  }
}
