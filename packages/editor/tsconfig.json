{
  "compilerOptions": {
    "declaration": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es6",
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "outDir": "bundles/",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "jsx": "react",
    "jsxFactory": "VElement.createElement",
    "paths": {
      "@textbus/platform-browser": ["../platform-browser/src/public-api.ts"],
      "@textbus/core": ["../core/src/public-api.ts"]
    }
  },
  "include": ["src"]
}
